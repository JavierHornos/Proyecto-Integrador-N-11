<!doctype html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!--fonts awesome-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" rel="stylesheet" />
    <!--Styles-->
    <link rel="stylesheet" href="/css/registro.css" />
</head>

<body>
    <%- include("../partials/header.ejs") %>

    <% if (typeof errors != 'undefined') { %>
        <p style="color:red">ERROR</p>
        <ul>
            <% for (let i =0; i < errors.length; i++) { %>
                <li>
                    <%= errors[i].msg %>
                </li>
            <% } %>    
        </ul>
    <% } %>



        <main>
            <form action="/users/registro" method="POST" class="formlogin" enctype="multipart/form-data">
                <div class="container">
                    <input class="form" type="Email" id="Email" name="Email" required>
                    <label class="label" for="Email">Mail</label>
                </div>
                <div class="container">
                    <input class="form" type="password" id="password" name="Password" pattern="[A-Za-z\d\.\0-9]{6,12}" title="El Password debe tener entre 6 y 12 caracteres" required>
                    <label class="label" for="password">Contraseña</label>
                    <div class="icono-password">
                        <i class="fa-solid fa-eye" onclick="mostrarPassword1()"></i>
                    </div>
                </div>

                <div class="container">
                    <input class="form" type="password" id="password2" name="password2" required>
                    <label class="label" for="password2">Confirmar Contraseña</label>
                    <div class="icono-password">
                        <i class="fa-solid fa-eye" onclick="mostrarPassword2()"></i>
                    </div>
                </div>

                <!-- <div class="container">
                    <input class="form" type="password" id="comfirm_password" name="comfirm_password" required>
                    <label class="label" for="confirm_password">Confirmar Contraseña</label>

                    <div class="icono-password">
                        <i class="fa-solid fa-eye" onclick="mostrarPassword2()"></i>
                    </div>
                </div> -->

                <div class="container">
                    <input class="form" type="text" id="Nombre" name="Nombre" pattern="[A-Za-z]+{2,25}" title="El Nombre debe tener entre 3 y 25 caracteres y contener solo letras" required >
                    <label class="label" for="Nombre">Nombre</label>
                </div>
                </div>
                <div class="container">
                    <input class="form" type="text" id="Apellido" name="Apellido" pattern="[A-Za-z]+{2,25}" title="El Nombre debe tener entre 3 y 25 caracteres y contener solo letras" required>
                    <label class="label" for="Apellido">Apellido</label>
                </div>
                <div class="container">
                    <input class="form" type="text" id="domicilio" name="Direccion" pattern="[A-Za-z 0-9]+{4,25}" title="la dirección debe contener letras y numeros" required>
                    <label class="label" for="domicilio">Domicilio</label>
                </div>

                <div class="container">
                    <label for="category" class="form-label">Creador:</label>
                    <select name="Local_FK" id="category" class="form-input">
                        <option value="">Local</option>
                        <option value="1">Once</option>
                        <option value="2">Parque Chacabuco</option>
                        <option value="3">Parque Centenario</option>
                    </select>
                </div>


                <div class="avatar">
                    <label for="cImage" class="form-label">Cargar imagen:</label>
                    <input type="file" name="Imagen" id="cImage" required></input>
                </div>


                <div class="myr">
                    <input class="form-check-input" type="checkbox" id="gridCheck" required="">
                    <label class="form-check-label" for="gridCheck">
                        Soy mayor de 18 años.
                    </label>
                </div>
                <div class="tyc">
                    <input class="form-check-input" type="checkbox" id="gridCheck1" required="">
                    <label class="form-check-label" for="gridCheck1">
                        Terminos y condiciones.
                    </label>
                </div>
                <div class="boton">
                    <button type="submit" class="button type1">
                        Registrarse!
                    </button>
                </div>
            </form>
            </div>

            </form>
        </main>

        <script src="/js/validador.js"></script>
</body>

</html>