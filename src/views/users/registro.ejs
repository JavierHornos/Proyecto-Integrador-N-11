<!doctype html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!--fonts awesome-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" rel="stylesheet" />
    <!--Styles-->
    <link rel="stylesheet" href="/css/registro.css" />
</head>

<body  class="fondo-imagenes">
    <%- include("../partials/header.ejs") %>

        <% if (typeof errors !='undefined' ) { %>
            <p style="color:red">ERROR</p>
            <ul>
                <% for (let i=0; i < errors.length; i++) { %>
                    <li>
                        <%= errors[i].msg %>
                    </li>
                    <% } %>
            </ul>
            <% } %>



                <main>
                    <form action="/users/registro" method="POST" id="formulario-registro" class="formlogin"
                        enctype="multipart/form-data">
                        <div class="container">
                            <input class="form" type="text" id="Email" name="Email">
                            <label class="label" for="Email">Mail</label>
                        </div>
                        <div class="container">
                            <input class="form" type="password" id="password" name="password">
                            <label class="label" for="password">Contraseña</label>
                            <div class="icono-password">
                                <i class="fa-solid fa-eye" onclick="mostrarPassword1()"></i>
                            </div>
                        </div>

                        <div class="container">
                            <input class="form" type="password" id="password2" name="password2">
                            <label class="label" for="password2">Confirmar Contraseña</label>
                            <div class="icono-password">
                                <i class="fa-solid fa-eye" onclick="mostrarPassword2()"></i>
                            </div>
                        </div>


                        <div class="container">
                            <input class="form" type="text" id="Nombre" name="Nombre">
                            <label class="label" for="Nombre">Nombre</label>

                        </div>
                        <div class="container">
                            <input class="form" type="text" id="apellido" name="Apellido">
                            <label class="label" for="apellido">Apellido</label>
                        </div>
                        <div class="container">
                            <input class="form" type="text" id="domicilio" name="domicilio">
                            <label class="label" for="domicilio">Domicilio</label>
                        </div>


                        <div class="avatar">
                            <label for="cImage" class="form-label">Cargar imagen:</label>

                            <input type="file" name="Imagen" id="Imagen" ></input>
                            <div id="preview" class="styleImage"></div>
                        </div>


                        <div class="myr">
                            <input class="form-check-input" type="checkbox" id="gridCheck" >
                            <label class="form-check-label" for="gridCheck">
                                Soy mayor de 18 años.
                            </label>
                        </div>
                        <div class="tyc">
                            <input class="form-check-input" type="checkbox" id="gridCheck1" >
                            <label class="form-check-label" for="gridCheck1">
                                Terminos y condiciones.
                            </label>
                        </div>
                        <div id="error">
                        </div>
                        </div>
                        <div class="boton">
                            <button type="submit" class="button type1">
                                Registrarse!
                            </button>
                        </div>
                    </form>
                    </div>

                    </form>
                </main>

                <script src="/js/validador.js"></script>
                <script src="/js/editar-perfil.js"></script>
                <script src="/js/validacion-registro.js"></script>
</body>

</html>