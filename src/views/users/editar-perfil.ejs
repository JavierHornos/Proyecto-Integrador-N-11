<!doctype html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!--fonts awesome-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" rel="stylesheet" />
    <!--Styles-->
    <link rel="stylesheet" href="/css/registro.css" />
</head>

<body>
    <%- include("../partials/header.ejs") %>

        <main>

            <% for(let p of user) { %> 
              

            <form action="/users/editar-perfil" method="POST" class="formlogin" enctype="multipart/form-data">
                          
                <div class="container">
                    <input class="form" type="text" id="nombre" name="Nombre" value="<%=p.Nombre%>" required>
                    <label class="label" for="nombre">Nombre</label>
                </div>
                </div>
                <div class="container">
                    <input class="form" type="text" id="apellido" name="Apellido" value="<%=p.Apellido%>" required>
                    <label class="label" for="apellido">Apellido</label>
                </div>
                <div class="container">
                    <input class="form" type="text" id="domicilio" name="Direccion" value="<%=p.Direccion%>" required>
                    <label class="label" for="domicilio">Domicilio</label>
                </div>
                
                <div class="container">
                    <label for="category" class="form-label" value="<%=p.Local_FK%>" >Creador:</label>
                    <select name="Local_FK" id="category" class="form-input">
                        <option value="">Local</option>
                        <option value="1">Once</option>
                        <option value="2">Parque Chacabuco</option>
                        <option value="3">Parque Centenario</option>
                    </select>
                </div>
                

                <div class="avatar">
                    <label for="cImage" class="form-label">Cargar imagen:</label>
                    <input type="file" name="Imagen" id="cImage" required ></input>
                </div>
         
                
                <div class="boton">
                    <button type="submit" class="button type1">
                        Editar Usuario
                    </button>
                </div>
            </form>
            </div>

            </form>

            <%} %> 
        </main>

</body>

</html>