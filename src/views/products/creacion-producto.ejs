<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/creacion-producto.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/e913f300ec.js" crossorigin="anonymous"></script>
    <title>Administracion De Productos</title>
</head>

<body>

    <%- include("../partials/header-productos-todos-admin.ejs") %>

    <main>

        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Formulario de creación de productos</h2>
                </div>
            </div>
            <div class="col-12">
                <form action="/products/crear" method="POST" id="creacion-producto" enctype="multipart/form-data">
                    <div class="row product-detail">
                        <div class="col-12 col-md-6">
                            <label for="name" class="form-label">Nombre del producto:</label>
                            <input type="text" id="nombre" name="nombre" placeholder="Ej: Vinos, whiskies" class="form-input">
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="price" class="form-label">Precio del producto:</label>
                            <input type="text" id="price" name="precio" placeholder="Ej: 10900" class="form-input">
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="discount" class="form-label">Descuento:</label>
                            <input type="text" id="discount" name="descuento" placeholder="Ej: 20" class="form-input">
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="category" class="form-label">Categoría:</label>
                            <select name="Categoria_FK" id="category" class="form-input">
                                <option value="">Elegí</option>
                                <option value="1">Vinos</option>
                                <option value="2">Espumantes</option>
                                <option value="3">Whiskies</option>
                                <option value="4">Gin</option>
                                <option value="5">Licores</option>
                                <option value="6">Vodka</option>
                                <option value="7">Ron</option>
                                <option value="8">Aperitivos</option>
                                <option value="9">Cervezas</option>
                                <option value="10">Accesorios</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-6">
                            <label for="category" class="form-label">Creador:</label>
                            <select name="Creador_FK" id="creator" class="form-input">
                                <option value="">Elegí</option>
                                <option value="1">Javier</option>
                                <option value="2">Francisco</option>
                                <option value="3">Lucas</option>
                                <option value="4">Laura</option>
                            </select>
                        </div>

                        <div class="container">
                            <label for="nombre" >Fecha de Creacion</label>
                            <input class="form" type="date" id="fecha" name="fecha_creacion" required>
                        </div>

                        <div class="col-12">
                            <label for="description" class="form-label">Descipción:</label>
                            <textarea name="descripcion" id="description" class="form-input"></textarea>
                        </div>

                        <div class="col-12">
                            <label for="cImage" class="form-label">Cargar imagen:</label>
                            <input type="file" name="imagen" id="cImage" ></input>
                        </div>

                        <div id="error">
                        </div>

                        <div class="col-12">
                            <button type="submit" class="buy-now-button">Guardar producto</button>
                        </div>
                    </div>
                </form>
            </div>

      
    </main>
    <script src="/js/validador-creacion-producto.js"></script>
</body>
</body>

